@model FirstAspNetCoreProject.Models.Joke

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Joke</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JokeOwner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JokeOwner)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JokeQuestion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JokeQuestion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JokeAnswer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JokeAnswer)
        </dd>
        @if (!string.IsNullOrEmpty(Model.JokeImagePath))
        {
            <dt class="col-sm-2">
                Image
            </dt>
            <dd class="col-sm-10">
                <img src="~/images/@Model.JokeImagePath" alt="Joke Image" />
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
